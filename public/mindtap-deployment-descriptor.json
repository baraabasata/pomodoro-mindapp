{
  name: "AppAThon.Pomodoro",
  displayName: "Pomodoro",
  version: "1.0",
  creator: "Cengage Learning",    
  rootURI: 'http://pomodoro-mindapp.herokuapp.com',
  helpURI: 'help.html',
  authScheme : "NONE",

  activities: {
      "collaboration": {
          displayName: "Create zCollab Activity",
          description: "zCollab Room",
          icon: "/ui/images/chat.gif",
          category: "other",
          placement: "DISTINCT",
          supportsAnnotations: false,
          supportsContextMenu: false,

          add: {
              uri: '/ui/readactivity/addReadActivity.jsp',
              roles: ['SUPER_ADMIN', 'PRODUCTION', 'EDITOR' ]
          },
          configure: {
              uri: '/ui/readactivity/configReadActivity.jsp',
              roles: ['SUPER_ADMIN', 'PRODUCTION', 'EDITOR']
          }
      },
      "inline_chat": {
          displayName: "Create zCollab Inline Activity",
          description: "zCollab Room",
          icon: "/ui/images/chat.gif",
          category: "zCollab",
          placement: "INLINE",

          add: {
              uri: "/ui/inlineactivity/addInlineActivity.jsp",
              roles: ["SUPER_ADMIN","PRODUCTION", "VENDOR", "EDITOR"]
          },
          configure: {
              uri: "/ui/inlineactivity/configInlineActivity.jsp",
              roles: ["SUPER_ADMIN","PRODUCTION", "VENDOR", "EDITOR"]
          }
      }
  },
      dockItems: {
      "enter_chat": {
          icon: "/ui/images/chat.gif",
          label: "Start zCollab Discussion",
          action: {
              uri: "/ui/chat/discussion.jsp",
              width: 600
          }
      }
  },
  contextMenuItems: {
      "enter_chat": {
          categories: ["reading"],
          label: "zCollab Select text",
          action: {
              uri: "/ui/chat.html",                
              width: 400                
          }
      }        
  },

  annotations: {
      js: "/jslib/inline_zCollab.js"
  }

}